{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0.0",
  "description": "Adds RateMyProfessor scores to MyPatriotWeb",
  "background": {
    "scripts": ["lib/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://ssbstureg.gmu.edu/*"
      ],
      "js": [
        "lib/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "https://*.ratemyprofessors.com/*"
  ],
  "permissions": [
    "webRequest"
  ]
}
